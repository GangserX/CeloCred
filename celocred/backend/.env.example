# Celo Network Configuration
CELO_RPC_URL=https://alfajores-forno.celo-testnet.org
CHAIN_ID=44787

# Smart Contract Addresses (Update these with your deployed addresses)
CREDIT_SCORE_ORACLE_ADDRESS=0x62468b565962f7713f939590B819AFDB5177bD08

# Oracle Wallet (KEEP THIS SECRET!)
# Generate a new wallet for oracle purposes only
# Fund it with CELO for gas fees (~1 CELO should last months)
ORACLE_PRIVATE_KEY=your_private_key_here

# Firebase Configuration
# Download service account JSON from Firebase Console
# Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Update Schedule (cron format)
# Default: Every hour at minute 0
# Examples:
#   "0 * * * *" = Every hour
#   "0 */2 * * *" = Every 2 hours
#   "0 0 * * *" = Once per day at midnight
UPDATE_CRON_SCHEDULE=0 * * * *

# Minimum transactions required before calculating score
MIN_TRANSACTIONS_FOR_SCORE=3

# Enable/disable automatic updates
AUTO_UPDATE_ENABLED=true

# Logging
LOG_LEVEL=info
